{
  "extends": "airbnb",

  "rules": {
    "react/jsx-filename-extension": ["error", { "extensions": [".jsx", ".tsx"] }]
  },

  "settings": {
    "import/extensions": [".js", ".jsx", ".ts", ".tsx" ],
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx", ".json", ".ts", ".tsx"]
      }
    }
  }
}
